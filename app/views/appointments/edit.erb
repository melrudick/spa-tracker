<h1>Edit <%= @club.name %></h1>

<form action="/clubs/<%=@club.id %>" method="POST">
  <label> Club Name </label>
  <input type="text" name="name" value="<%=@club.name %>"> </br>

  <label> Club Manufacturer </label>
  <input type="text" name="manufacturer" value="<%=@club.manufacturer%>"> </br>

  <label> Which Golf Bag does this belong in? </label>
  <select name="golf_bag_id">
    <% current_user.golf_bags.each do |bag| %>
      <option value=<%=bag.id %> <%= "selected" if bag.id==@club.golf_bag.id %> ><%= bag.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Update">
</form>
